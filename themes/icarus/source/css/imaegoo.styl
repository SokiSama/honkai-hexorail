        margin-left: 10px

// img hover spin with bounce and pink halo
@keyframes img-spin-bounce
  0%
    transform: rotate(0deg)
  60%
    transform: rotate(260deg)
  85%
    transform: rotate(0deg)
  92%
    transform: rotate(-15deg)
  100%
    transform: rotate(0deg)

.avatar, .tk-avatar, .vavatar, .wl-avatar
  transform-origin: 50% 50%
  transition: box-shadow .25s ease
  backface-visibility: hidden

.avatar:hover, .tk-avatar:hover, .vavatar:hover, .wl-avatar:hover
  animation: img-spin-bounce 1.3s ease-in-out 0s 1 normal both
  box-shadow: 0 0 22px 8px rgba(255, 192, 203, 0.55)

.third-party-link-desc
    margin: 10px 20px

.third-party-link-btn-group
    margin-top: 10px
    text-align: right
    margin: 0 20px 16px
    .button.is-success
        margin-left: 10px

// Skills section styles
.skills-section
    padding: 1rem
    border-radius: 12px
    background-color: transparent
    backdrop-filter: none
    -webkit-backdrop-filter: none

    .skills-title
        margin: 0 0 .5rem
        font-weight: 600
    .skills-subtitle
        opacity: .75
        margin: 0 0 1rem

    .skills-grid
        display: grid
        grid-template-columns: repeat(5, minmax(0, 1fr))
        grid-auto-rows: 120px
        align-items: stretch
        gap: 1rem

    .skill-card
        border-radius: 12px
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        .card-content
            padding: 0.75rem
        .skill-name
            margin-top: .25rem
            font-weight: 500
            font-size: 0.95rem
            opacity: .9

@media screen and (max-width: screen-widescreen)
    .skills-section .skills-grid
        grid-template-columns: repeat(5, 1fr)

@media screen and (max-width: screen-desktop)
    .skills-section .skills-grid
        grid-template-columns: repeat(3, 1fr)

@media screen and (max-width: screen-tablet)
    .skills-section .skills-grid
        grid-template-columns: repeat(2, 1fr)
