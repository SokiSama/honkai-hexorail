.third-party-link-mask
    position: fixed
    inset: 0
    z-index: 9000
    background: rgba(0,0,0,.6)

.third-party-link-dialog
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
    width: 310px
    background: #fff
    border-radius: 10px
    overflow-wrap: anywhere
    overflow: hidden
