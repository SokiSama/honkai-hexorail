// 新增：菜单列表悬停颜色与 banner 同色
.menu-list a
    &:hover
        background-color: primary-color
        color: white
    &.is-active
        background-color: primary-color-hover

#weixin-search-logo
    background-image: url("/images/weixin/blacklogo.png")
    background-size: contain
    background-repeat: no-repeat
    width: 157px
    height: 27px
    margin-bottom: 1rem

#weixin-search-text
    .icon
        color: inherit
