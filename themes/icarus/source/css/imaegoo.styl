// Background image
body
    background-color: transparent
body:before
    content: ''
    position: fixed
    z-index: -1
    top: 0
    right: 0
    bottom: 0
    left: 0
    opacity: 0.3
    // transition: opacity 1s
    background: url("/img/136046620_p0.png") repeat
